        <!--                        <field name="device_list">-->
        <!--                            <tree>-->
        <!--                                <field name="name"/>-->
        <!--                                <field name="purchase_order"/>-->
        <!--                                <field name="device_type"/>-->
        <!--                                <field name="serial_number"/>-->
        <!--                                <field name="quantity"/>-->
        <!--                                <field name="old_new_equipment"/>-->
        <!--                                <field name="replace"/>-->
        <!--                                <field name="terminal"/>-->
        <!--                            </tree>-->
        <!--                        </field>-->
        <!--                    </page>-->
        <!--                </notebook>-->
      </field>

    </record>
    <record id="view_machine_device_tree" model="ir.ui.view">
      <field name="name">machine.device.tree</field>
      <field name="model">machine.device</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="purchase_order" />
          <field name="device_type" />
        </tree>
      </field>
    </record>

    <record id="view_machine_device_form" model="ir.ui.view">
      <field name="name">machine.device.form</field>
      <field name="model">machine.device</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" />
              <field name="purchase_order" />
              <field name="device_type" />
              <field name="serial_number" />
              <field name="old_new" widget="radio" />
              <field name="replace" />
              <field name="terminal" />
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
